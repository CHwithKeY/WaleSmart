<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_double_divider"
    android:paddingTop="@dimen/item_double_divider">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/location_spn0"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/item_double_divider"
        android:background="@drawable/location_spinner_item_spn" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/location_spn1"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/item_double_divider"
        android:background="@drawable/location_spinner_item_spn" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/location_spn2"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/item_double_divider"
        android:background="@drawable/location_spinner_item_spn" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/location_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/item_double_divider"
        android:background="@drawable/location_spinner_item_btn"
        android:text="@string/base_dialog_btn_confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large_size" />

</LinearLayout>