<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_ll"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rv_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/item_opf_divider"
        android:contentDescription="@string/image_content_shoe_image"
        android:src="@drawable/ic_public_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rv_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_opf_divider"
            android:paddingRight="@dimen/item_opf_divider"
            android:text="李宁\t爆裂激情燃烧乔丹款"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/rv_params_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_divider"
                android:paddingLeft="@dimen/item_opf_divider"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/item_opf_divider"
                android:text="淡黄色 43码"
                android:textSize="16sp" />

            <ImageView
                android:contentDescription="@string/image_content_tablayout"
                android:id="@+id/rv_gender_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/rv_params_tv"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/rv_params_tv"
                android:src="@drawable/shoe_gender_male" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>