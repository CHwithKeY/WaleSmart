<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/search_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:iconifiedByDefault="true"
            android:imeOptions="actionSearch" />

        <TextView
            android:id="@+id/search_shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayTrans" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/search_imgbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/item_double_divider"
        android:background="@drawable/result_top_imgbtn"
        android:contentDescription="@string/image_btn_content_search_icon"
        android:src="@drawable/ic_public_search_light" />

</FrameLayout>
